{% extends "layout.njk" %}

{% block head_content %}
    <title>Gym</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/menu.css">
    <link rel="stylesheet" href="/css/edit_instructor.css">
{% endblock head_content %}


{% block body_main_content %}
    <main>
        <div class="card">
            <div class="avatar">
                    <img src="{{instructor.avatar_url}}" alt="Imagem do Instrutor">
            </div>

            <div class="details">
                <form id="edit-form" method="POST" action="/instructors/edit_instructor?_method=PUT">
                    <h3>Editar Instrutor</h3>
                    
                    {% include "./includes/form_fields.njk" %}

                    <input
                        type="hidden"
                        name="id"
                        value="{{instructor.id}}"
                    >
                </form>

                <form id="delete-form" method="POST" action="/instructors/edit_instructor?_method=DELETE">
                    <input
                        type="hidden"
                        name="id"
                        value="{{instructor.id}}"
                    >

                    <button
                        class="tertiary-color-button form-button"
                        type="submit"
                    >
                    Deletar
                    </button>
                </form>
            </div>
        </div>
    </main>

    <script>
        function formHandler(form) {
            const selectedForm = document.getElementById(form)

            selectedForm.addEventListener("submit", (event) => {
                event.preventDefault()
            })
        }
    </script>
{% endblock body_main_content%}